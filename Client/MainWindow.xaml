<Window x:Class="FortuneCookie.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Şans Kurabiyesi" Height="700" Width="600"
        Background="#3E2723" ResizeMode="CanResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#8D6E63"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Advanced Crack Animation -->
        <Storyboard x:Key="CrackAnimation">
            <!-- 1. Shake Phase (0s - 1s) -->
            <DoubleAnimation Storyboard.TargetName="CookieContainer" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(RotateTransform.Angle)"
                             From="-2" To="2" Duration="0:0:0.05" AutoReverse="True" RepeatBehavior="20x" BeginTime="0:0:0"/>
            
            <!-- 2. Break Apart (1s - 1.5s) -->
            <!-- Move Left Half -->
            <DoubleAnimation Storyboard.TargetName="LeftCookie" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                             To="-30" Duration="0:0:0.5" BeginTime="0:0:1">
                 <DoubleAnimation.EasingFunction><ExponentialEase EasingMode="EaseOut"/></DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="LeftCookie" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                             To="-15" Duration="0:0:0.5" BeginTime="0:0:1"/>

            <!-- Move Right Half -->
            <DoubleAnimation Storyboard.TargetName="RightCookie" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(TranslateTransform.X)"
                             To="30" Duration="0:0:0.5" BeginTime="0:0:1">
                <DoubleAnimation.EasingFunction><ExponentialEase EasingMode="EaseOut"/></DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="RightCookie" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                             To="15" Duration="0:0:0.5" BeginTime="0:0:1"/>
                             
            <!-- Fade Out Cookie Parts (1.5s - 2s) -->
            <DoubleAnimation Storyboard.TargetName="CookieContainer" Storyboard.TargetProperty="Opacity"
                             To="0" Duration="0:0:0.5" BeginTime="0:0:1.5"/>

            <!-- 3. Reveal Fortune (1.2s - 2s) -->
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FortuneCard" Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:1.2" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="FortuneCard" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.8" BeginTime="0:0:1.2"/>
             <DoubleAnimation Storyboard.TargetName="FortuneCard" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.5" To="1" Duration="0:0:0.5" BeginTime="0:0:1.2">
                 <DoubleAnimation.EasingFunction><BackEase EasingMode="EaseOut"/></DoubleAnimation.EasingFunction>
             </DoubleAnimation>
             <DoubleAnimation Storyboard.TargetName="FortuneCard" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.5" To="1" Duration="0:0:0.5" BeginTime="0:0:1.2">
                 <DoubleAnimation.EasingFunction><BackEase EasingMode="EaseOut"/></DoubleAnimation.EasingFunction>
             </DoubleAnimation>
        </Storyboard>
        
        <!-- Reset Animation -->
         <Storyboard x:Key="ResetAnimation">
             <!-- ... existing reset animation ... -->
        </Storyboard>

        <!-- Lucky Number Pop Animation -->
        <Storyboard x:Key="LuckyNumberAnimation">
            <DoubleAnimation Storyboard.TargetName="CurrentLuckyNumbers" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                             From="0.5" To="1.5" Duration="0:0:0.3" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="CurrentLuckyNumbers" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                             From="0.5" To="1.5" Duration="0:0:0.3" AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetName="CurrentLuckyNumbers" Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Shake Animation -->
        <Storyboard x:Key="ShakeCookie">
            <DoubleAnimation Storyboard.TargetName="CookieDisplayImage" Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="-3" To="3" Duration="0:0:0.05" AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Login View -->
        <Grid x:Name="LoginGrid" Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🍪 Şans Kurabiyesi" FontSize="28" Foreground="#D7CCC8" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="Giriş Yap" FontSize="20" Foreground="#FFCC80" HorizontalAlignment="Center" Margin="0,10"/>

                <TextBlock Text="Kullanıcı Adı:" Foreground="#D7CCC8" Margin="0,5"/>
                <TextBox x:Name="LoginUsernameBox" Width="220" Padding="5"/>
                
                <TextBlock Text="Şifre:" Foreground="#D7CCC8" Margin="0,5"/>
                <PasswordBox x:Name="LoginPasswordBox" Width="220" Padding="5"/>

                <Button Content="Giriş Yap" Click="LoginButton_Click" Margin="0,20,0,0" Width="150" Height="40" Background="#6D4C41"/>
                
                <TextBlock Text="Hesabın yok mu?" Foreground="#A1887F" Margin="0,15,0,5" HorizontalAlignment="Center"/>
                <Button Content="Kayıt Ol Ekranına Git" Click="GoToRegister_Click" Width="160" Background="Transparent" Foreground="#FFCC80"/>
            </StackPanel>
        </Grid>

        <!-- Register View -->
        <Grid x:Name="RegisterGrid" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🍪 Yeni Hesap" FontSize="28" Foreground="#D7CCC8" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Kullanıcı Adı:" Foreground="#D7CCC8" Margin="0,5"/>
                <TextBox x:Name="RegUsernameBox" Width="220" Padding="5"/>
                
                <TextBlock Text="Şifre:" Foreground="#D7CCC8" Margin="0,5"/>
                <PasswordBox x:Name="RegPasswordBox" Width="220" Padding="5"/>

                <Button Content="Kayıt Ol" Click="RegisterButton_Click" Margin="0,20,0,0" Width="150" Height="40" Background="#5D4037"/>
                
                <Button Content="Geri Dön (Giriş)" Click="GoToLogin_Click" Margin="0,10" Width="150" Background="Transparent" Foreground="#A1887F"/>
            </StackPanel>
        </Grid>

        <!-- Main View -->
        <Grid x:Name="MainGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.ColumnSpan="2" Background="#5D4037" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="WelcomeText" Text="Merhaba" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ReputationText" Text=" | Puan: 0" Foreground="#FFCC80" FontSize="14" VerticalAlignment="Center"/>
                    <Button Content="Çıkış" Click="Logout_Click" Margin="20,0,0,0" Background="#3E2723" FontSize="10" Padding="5,2"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/> <!-- Tab Buttons -->
                     <RowDefinition Height="*"/>    <!-- Content -->
                </Grid.RowDefinitions>

                <!-- Fortune of the Day Toast/Banner -->
                <Border x:Name="BroadcastBanner" Grid.RowSpan="2" Panel.ZIndex="999" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="#FF7043" Padding="10" Margin="20,50,20,10" CornerRadius="8" Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="📢 GÜNÜN FALI" FontWeight="Bold" Foreground="White"/>
                            <TextBlock x:Name="BroadcastText" Text="..." Foreground="White" TextWrapping="Wrap"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="X" Click="CloseBroadcast_Click" Width="30" Height="30" Background="Transparent" BorderThickness="0" Foreground="White" FontWeight="Bold"/>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Fal Bak" Click="ShowFortuneTab_Click" Width="80"/>
                    <Button Content="Fal Ekle" Click="ShowSubmitTab_Click" Width="80"/>
                    <Button Content="Geçmiş" Click="ShowHistoryTab_Click" Width="80"/>
                    <Button Content="Şanslı Sayılar" Click="ShowLuckyTab_Click" Width="120" Background="#FF7043"/>
                </StackPanel>

                <!-- Fortune Tab -->
                <Grid x:Name="FortuneTab" Grid.Row="1" Visibility="Visible">
                     <!-- ... (existing Fortune Tab content) ... -->

                     <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Simulation Container -->
                    <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Cookie Area -->
                        <Grid Grid.Row="0" Width="600" Height="450">
                             <!-- Main Display Image -->
                             <Image x:Name="CookieDisplayImage" Source="Images/seq_1.png" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                 <Image.RenderTransform>
                                     <RotateTransform Angle="0"/>
                                 </Image.RenderTransform>
                             </Image>
                             
                             <!-- Click Trigger (Transparent Button) -->
                             <Button x:Name="CookieButton" Click="OpenCookie_Click" Background="Transparent" BorderThickness="0" Cursor="Hand" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                 <Button.Template>
                                     <ControlTemplate TargetType="Button">
                                         <Grid Background="Transparent"/>
                                     </ControlTemplate>
                                 </Button.Template>
                             </Button>

                             <!-- Text in White Box (Initially Hidden) -->
                             <Border x:Name="FortuneCardBorder" Visibility="Collapsed" 
                                     Background="White" BorderBrush="#D7CCC8" BorderThickness="1" CornerRadius="8"
                                     Width="350" MinHeight="100" HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Padding="20" RenderTransformOrigin="0.5,0.5">
                                 <Border.Effect>
                                     <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="3" BlurRadius="5"/>
                                 </Border.Effect>
                                 <TextBlock x:Name="FortuneText" 
                                            Text="..." 
                                            Foreground="#3E2723" FontFamily="Segoe Print" FontWeight="Bold" FontSize="14" 
                                            TextWrapping="Wrap" TextAlignment="Center" 
                                            VerticalAlignment="Center"/>
                             </Border>
                        </Grid>
                        
                        <!-- Controls -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <ComboBox x:Name="CategoryBox" Width="120" Height="40" Margin="0,0,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#D7CCC8" Foreground="#5D4037" FontWeight="Bold">
                                <ComboBoxItem Content="Genel" Tag="General" IsSelected="True"/>
                                <ComboBoxItem Content="Komik" Tag="Funny"/>
                                <ComboBoxItem Content="Bilge" Tag="Wise"/>
                                <ComboBoxItem Content="Motivasyon" Tag="Motivational"/>
                                <ComboBoxItem Content="Romantik" Tag="Romantic"/>
                                <ComboBoxItem Content="Lanetli" Tag="Cursed"/>
                            </ComboBox>
                            
                            <Button x:Name="ResetButton" Content="🔄 Yeni Fal" Click="ResetCookie_Click" Width="120" Height="40" Background="#5D4037" Visibility="Collapsed" Margin="0,0,10,0"/>
                            <Button x:Name="ShareButton" Content="📤 Paylaş" Click="ShareFortune_Click" Width="100" Height="40" Background="#8D6E63" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Chat (Condensed) -->
                    <Border Grid.Row="2" Background="#4E342E" CornerRadius="10" Margin="10" Padding="5" Height="120">
                        <Grid>
                             <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <ListBox x:Name="ChatListBox" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="11"/>
                             <Grid Grid.Row="1" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="MsgBox" Padding="2"/>
                                <Button Grid.Column="1" Content=">" Click="SendMessage_Click" Width="30" Padding="0"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Submit Fortune Tab -->
                 <Grid x:Name="SubmitTab" Grid.Row="1" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Kendi Falını Yaz &amp; Paylaş" FontSize="20" Foreground="#FFCC80" HorizontalAlignment="Center" Margin="10"/>
                    
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10">
                         <TextBox x:Name="SubmitTextBox" Width="300" Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                                FontSize="14" Padding="10" Background="#FFFFFF" Foreground="#3E2723"
                                VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>
                         
                         <ComboBox x:Name="SubmitCategoryBox" Width="300" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                            <ComboBoxItem Content="Genel" Tag="General" IsSelected="True"/>
                            <ComboBoxItem Content="Komik" Tag="Funny"/>
                            <ComboBoxItem Content="Bilge" Tag="Wise"/>
                            <ComboBoxItem Content="Motivasyon" Tag="Motivational"/>
                            <ComboBoxItem Content="Romantik" Tag="Romantic"/>
                            <ComboBoxItem Content="Lanetli" Tag="Cursed"/>
                        </ComboBox>
                        
                         <Button Content="Gönder" Click="SubmitFortune_Click" Width="100" Height="30" Background="#8D6E63"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Row="2" Text="Eklenen Fallar (Bu Oturum)" FontSize="14" Foreground="#A1887F" HorizontalAlignment="Center" Margin="10,20,10,5"/>
                    <ListBox x:Name="SubmitHistoryList" Grid.Row="3" Background="Transparent" BorderThickness="0" Width="400" HorizontalAlignment="Center" Margin="0,0,0,10" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="12" Margin="5,4" Padding="12" BorderThickness="0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="4"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Icon / Category Indicator -->
                                        <Border Grid.Column="0" Background="{Binding CategoryColor}" Width="40" Height="40" CornerRadius="20" VerticalAlignment="Top" Margin="0,0,12,0">
                                            <TextBlock Text="{Binding Icon}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                        </Border>
                                        
                                        <!-- Content -->
                                        <StackPanel Grid.Column="1">
                                            <Border Background="{Binding CategoryColor}" CornerRadius="4" HorizontalAlignment="Left" Padding="6,2" Margin="0,0,0,4" Opacity="0.9">
                                                <TextBlock Text="{Binding CategoryDisplay}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                            <TextBlock Text="{Binding Text}" Foreground="#37474F" TextWrapping="Wrap" FontSize="13" LineHeight="18"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <!-- History Tab -->
                <Grid x:Name="HistoryTab" Grid.Row="1" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Fal Geçmişim" FontSize="20" Foreground="#FFCC80" HorizontalAlignment="Center" Margin="10"/>
                    <ListBox x:Name="HistoryListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#D7CCC8" CornerRadius="10" Padding="10" Margin="0,0,0,10" Width="360">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Date}" FontSize="10" Foreground="#5D4037" HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding FortuneText}" TextWrapping="Wrap" FontSize="14" Foreground="#3E2723" Margin="0,5"/>
                                        <TextBlock Text="{Binding Rarity}" FontSize="10" Foreground="#8D6E63" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <!-- Lucky Numbers Tab -->
                <Grid x:Name="LuckyTab" Grid.Row="1" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Şanslı Sayı Üretici" FontSize="20" Foreground="#FFCC80" HorizontalAlignment="Center" Margin="10"/>
                    
                    <!-- Generator Section -->
                    <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,10">
                         <Button x:Name="GenBtn" Content="Tek Şans 🎲" Click="GenerateNumbers_Click" Width="200" Height="50" Background="#FF7043" FontSize="18"/>
                         
                         <Border Background="#4E342E" CornerRadius="50" Padding="30" Margin="0,30" Width="150" Height="150">
                             <TextBlock x:Name="CurrentLuckyNumbers" Text="?" FontSize="64" FontWeight="Bold" Foreground="#FFCC80" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                 <TextBlock.RenderTransform>
                                     <ScaleTransform ScaleX="1" ScaleY="1"/>
                                 </TextBlock.RenderTransform>
                             </TextBlock>
                         </Border>
                    </StackPanel>
                    
                    <!-- History Section -->
                    <Grid Grid.Row="2" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Üretim Geçmişi" Foreground="#A1887F" Margin="5"/>
                        <ListBox x:Name="LuckyHistoryList" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="#D7CCC8"/>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Online Users -->
            <Border Grid.Row="1" Grid.Column="1" Margin="10" Background="#3E2723" BorderBrush="#5D4037" BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Çevrimiçi" Foreground="#D7CCC8" Margin="10" FontSize="16" FontWeight="Bold"/>
                    <ListBox x:Name="UserListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" Foreground="#FFCC80" Margin="5"/>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#1B1B1B" Padding="5">
                <TextBlock x:Name="NotificationText" Text="Hazır" Foreground="#81C784" FontSize="12" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
